<LinearLayout
    android:id="@+id/widget_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp" 
    android:layout_height="193dp"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#121212"
    android:elevation="6dp"
    android:layout_gravity="center"
    android:layout_margin="8dp">

    <!-- ðŸ”¥ Streak + XP Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/streak_text"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="wrap_content"
            android:text="ðŸ”¥ 4 days streak"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/xp_text"
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="wrap_content"
            android:text="+ 60XP"
            android:textColor="#32CD32"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="end" />
    </LinearLayout>

    <!-- 3/5 Applications Label -->
    <TextView
        android:id="@+id/jobs_progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/0 Applications"
        android:textColor="#D0D0D0"
        android:textStyle="italic"
        android:textSize="14sp"
        android:layout_marginBottom="4dp" />

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:progress="0"
        android:max="100"
        android:progressDrawable="@drawable/progress_drawable"
        android:layout_marginBottom="12dp"
        android:background="#333333" />

    <!-- Add Job CTA -->
    <TextView
        android:id="@+id/add_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add job â†’"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="16sp" />
</LinearLayout>

